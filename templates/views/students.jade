extends ../layouts/default

block content
	.page-content: .container 
		if students.length
			.tile: table.table.table-striped
				col(width='25%')
				thead.panel-heading
					tr
						th Matricola
						th Total
						th Score
				tbody
					each student in students
						tr
							td= student.matricola
							td= student.totalTranslations
							td= student.score
		else
			h3.text-muted There are no students yet.
